<h1 class='font-bold text-2xl'><%= @user.username %></h1>
<div class='grid gap-4 border rounded-xl shadow-xl p-8 bg-white'>
  <div class='flex justify-between w-full'>
    <h1 class='font-bold text-xl'>My Conversations</h1>

      <%= link_to new_conversation_path,
                  class: "bg-gray-800 text-white rounded p-2 w-fit text-xs",
                  data: { turbo_frame: 'modal' } do %>
          <div class='break-keep w-full'>New Conversation</div>
      <% end %>

  </div>
  <%= turbo_frame_tag 'conversations', class:'grid md:grid-cols-3 xl:grid-cols-4 gap-4' do %>
    <% if @user.conversations %>
      <%= render(ConversationComponent.with_collection(@conversations)) %>
    <% else %>
      No Conversations
    <% end %>
  <% end %>
</div>
