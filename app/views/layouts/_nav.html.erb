<div class='bg-black text-white flex gap-4 justify-between p-2'>
  <%= link_to :root do %>
    <%= render 'layouts/logo', size: :xs %>
  <% end %>
  <div class='flex gap-4'>
    <% if current_user %>
      Hello, <%= link_to current_user.username, user_path(current_user) %>
      <%= button_to 'Log Out', destroy_user_session_path, method: :delete, data: { turbo: false } %>
    <% else %>
      <%= link_to 'Log In', new_user_session_path, class: 'mr-4' %>
      <%= link_to 'Sign Up', new_user_registration_path %>
    <% end %>
  </div>
</div>